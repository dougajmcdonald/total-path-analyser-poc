{
  "name": "lorcana-paths",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{js,jsx,md}\"",
    "dev-setup": "node scripts/dev-setup.js",
    "bundle:data": "node scripts/bundle-data.js",
    "import:data": "cd packages/lorcana/data-import && pnpm run import:cards",
    "build:data": "pnpm run import:data && pnpm run bundle:data",
    "test": "node scripts/run-tests.js",
    "test:simulator": "cd packages/lorcana/simulator && pnpm test",
    "test:simulator:watch": "cd packages/lorcana/simulator && pnpm test:watch",
    "test:simulator:coverage": "cd packages/lorcana/simulator && pnpm test:coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-turbo": "^2.2.2",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "chalk": "^5.6.0",
    "zod": "^4.1.5"
  }
}
